{
  "manifest_version": 2,

  "name": "Sonoma Task Priority Launcher",
  "description": "Sonoma Task Priority Launcher",
  "version": "0.1",

  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "content_scripts": [
      {
        "matches": ["*://*.atlassian.nett/*"],
        "js": ["js/vendor.js", "js/content_script.js"],
        "css": ["styles/variables.css", "styles/popup.css", "styles/content.css"]
      }
  ],

  "background": {
    "scripts": ["js/vendor.js", "js/background.js"]
  },

  "permissions": [
    "storage",
    "<all_urls>"
  ],
  "web_accessible_resources": [
    "js/vendor.js",
    "styles/content.css",
    "styles/variables.css",
    "styles/popup.css",
    "content.html"
  ]
}